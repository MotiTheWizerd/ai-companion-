{
  "manifest_version": 3,
  "name": "My Chrome Extension",
  "version": "1.0.0",
  "description": "A basic Chrome extension",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.svg",
      "48": "icons/icon48.svg",
      "128": "icons/icon128.svg"
    }
  },
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  },
  "permissions": [],
  "host_permissions": [
    "https://chatgpt.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["src/loader.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/content.js",
        "src/content/core/*.js",
        "src/content/modules/*.js",
        "src/content/modules/eventHandlers/*.js",
        "src/content/modules/utils/*.js",
        "src/modules/*.js",
        "src/modules/*/*.js"
      ],
      "matches": ["https://chatgpt.com/*"]
    }
  ]
}
